{
  "productName": "Mini Git Server",
  "version": "1.0.0",
  "identifier": "com.example.minigit",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Mini Git Server",
        "width": 1000,
        "height": 720,
        "resizable": true,
        "maximized": true,
        "url": "index.html"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": ["icons/icon.ico"],
    "resources": [
      "resources/backend/server.jar",
      "resources/jre"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  }
}
